{
  "manifest_version": 2,
  "name": "web.skype.com for Firefox",
  "version": "0.6.0",
  "author": "Phil Tsaryk",

  "description": "With this extension you are able to open https://web.skype.com/ in Firefox.",
  "homepage_url": "https://github.com/phts/firefox-web-skype",
  "icons": {
    "48": "icons/app-48.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*.live.com/*",
    "https://*.live.net/*",
    "https://*.microsoft.com/*",
    "https://*.microsoftonline.com/*",
    "https://*.skype.com/*",
    "https://*.skypeassets.com/*"
  ],

  "applications": {
    "gecko": {
      "id": "firefox-web-skype@phts",
      "strict_min_version": "52.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  }
}
